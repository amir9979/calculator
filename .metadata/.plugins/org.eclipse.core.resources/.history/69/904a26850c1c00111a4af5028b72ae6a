package dev.log.trace.test;

import java.util.ArrayList;

import dev.log.activity.ComponentVector;
import dev.log.activity.ErrorVector;
import dev.log.activity.Matrix;

public class TestActivityMatrix {

	public static void main(String[] args) {
		ComponentVector vector1 = new ComponentVector();
		ComponentVector vector2 = new ComponentVector();
		ComponentVector vector3 = new ComponentVector();
		ErrorVector error = new ErrorVector();

		error.setHeader("ei");error.addValue(1);error.addValue(1);error.addValue(0);
		
		vector1.setHeader("c1");vector1.addValue(1);vector1.addValue(0);vector1.addValue(1);vector1.updateCounts(error);
		vector2.setHeader("c2");vector2.addValue(0);vector2.addValue(1);vector2.addValue(0);vector2.updateCounts(error);
		vector3.setHeader("c3");vector3.addValue(1);vector3.addValue(1);vector3.addValue(1);vector3.updateCounts(error);


		ArrayList<ComponentVector> vectors = new ArrayList<ComponentVector>();
		
		vectors.add(vector1);
		vectors.add(vector2);
		vectors.add(vector3);
		
		Matrix matrix = new Matrix(vectors,error);
		System.out.println(matrix.getRank());
		System.out.println(matrix);
		try {
			matrix.strip("c2");
			System.out.println(matrix);
			System.out.println(matrix.getComponent("c1"));
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
