package dev.log.trace.test;

import java.util.ArrayList;

import dev.log.activity.Matrix;

public class TestActivityMatrix {

	public static void main(String[] args) {
		ArrayList<Object> vector1 = new ArrayList<Object>();
		ArrayList<Object> vector2 = new ArrayList<Object>();
		ArrayList<Object> vector3 = new ArrayList<Object>();
		ArrayList<Object> error = new ArrayList<Object>();
		
		vector1.setHeader("c1");vector1.add(1);vector1.add(0);vector1.add(1);
		vector2.setHeader("c2");vector2.add(0);vector2.add(1);vector2.add(0);
		vector3.setHeader("c3");vector3.add(1);vector3.add(1);vector3.add(1);

		error.add("ei");error.add(1);error.add(1);error.add(0);

		ArrayList<ArrayList<Object>> vectors = new ArrayList<ArrayList<Object>>();
		
		vectors.add(vector1);
		vectors.add(vector2);
		vectors.add(vector3);
		
		Matrix matrix = new Matrix(vectors,error);
		System.out.println(matrix.getRank());
		System.out.println(matrix);
		try {
			matrix.strip("c2");
			System.out.println(matrix);
			System.out.println(matrix.getVector("c1"));
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
