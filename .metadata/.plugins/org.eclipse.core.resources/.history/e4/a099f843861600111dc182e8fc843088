package dev.log.trace;

import java.io.File;
import java.io.FileWriter;
import java.io.PrintWriter;

public class TraceStatePoint {

	String service_id;
	String interface_id;
	String process_id;
	String sequence_id;
	
	public TraceStatePoint(String service_id, String interface_id, String process_id, String sequence_id) {
		this.service_id = service_id;
		this.interface_id = interface_id;
		this.process_id = process_id;
		this.sequence_id = sequence_id;
	}
	
	public void logToFile() {
		FileWriter writer = new FileWriter(new File("trace_log.txt"),true);
		PrintWriter out = new PrintWriter(writer);
		out.println(String.format("{\"service_id\":\"%s\",\"interface_id\":\"%s\",\"process_id\":\"%s\",\"sequence_id\":\"%s\"}",
				service_id,interface_id,process_id,sequence_id));
	}
}
